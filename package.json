{
  "name": "acc-mcp-server",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "description": "Model Context Protocol server for comprehensive Autodesk Construction Cloud integration - Construction Management focused",
  "author": "Your Name <your.email@company.com>",
  "keywords": [
    "autodesk",
    "construction-cloud",
    "mcp",
    "construction-management"
  ],
  "bin": {
    "acc-mcp-server": "./build/server.js",
    "create-service-account": "./scripts/create-service-account.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "inspect": "mcp-inspector node ./build/server.js",
    "test": "node --test",
    "test:watch": "node --test --watch",
    "test:working": "node --test src/tests/working-*.js",
    "test:working:watch": "node --test --watch src/tests/working-*.js",
    "test:unit": "node --test src/tests/unit/**/*.test.js",
    "test:all": "npm run test && npm run test:working",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "validate": "npm run lint && npm run build && npm run test",
    "clean": "rm -rf build/"
  },
  "files": [
    "build",
    "README.md"
  ],
  "dependencies": {
    "@aps_sdk/authentication": "^1.0.0",
    "@aps_sdk/construction-issues": "^1.1.0",
    "@aps_sdk/data-management": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "dotenv": "^16.4.7",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.33.0",
    "winston": "^3.11.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.6.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.10",
    "@types/pdf-parse": "^1.1.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.8.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Arborist-ai/acc-mcp-server"
  },
  "license": "MIT"
}
